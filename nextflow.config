params.raw_bams = "${Raw_Bams}/*bam"
params.WD = "trX_assembly"
params.sample_file = "${DB_REF}/Z_capensis.Transcriptome.tsv"
params.SortmeRNA_Reflist = ["${DB_REF}/SILVA/SILVA_138.1_LSURef_tax_silva.fasta",
"${DB_REF}/SILVA/SILVA_138.1_SSURef_tax_silva.fasta"]
params.scratch_small =  "${scratch_small}/${USER}_${RANDOM}" 
params.scratch_large =  "${scratch_large}/${USER}_${RANDOM}" 
	

profiles {

xstandard {
         process.executor = "pbs"

	 params.htp_cores = 48
	 params.mtp_cores = 16
	 params.ltp_cores = 4
	 params.h_mem  	  = 500
	 params.m_mem  	  = 24
	 params.l_mem  	  = 10

	 process{
		withName: '!Trinity_SE'{
		time  = '2h'
		queue = 'short'
		}
		withName: 'Trinity_SE'{
		time  = '7d'
		queue = 'week'
		}

	 }
	
}


standard {
         process.executor = "local"		
	 params.htp_cores = 4
	 params.mtp_cores = 3
	 params.ltp_cores = 2
	 params.h_mem  	  = 14
	 params.m_mem  	  = 6
	 params.l_mem  	  = 2


}
}















